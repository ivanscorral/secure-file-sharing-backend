{
  "name": "secure-file-sharing-backend",
  "version": "0.0.1",
  "description": "The back-end of the Secure File Sharing Platform handles file upload, encryption, storage, decryption, download, and expiration. It provides a secure and efficient means for temporary and anonymous file sharing.",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node .build/index.js",
    "clean": "rimraf .build",
    "build": "tsc",
    "prestart": "npm run build",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "dev": "ts-node src/"
  },
  "keywords": [
    "secure"
  ],
  "author": "Ivan Sanchez Corral",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "inversify": "^6.0.1",
    "mongodb": "^6.1.0",
    "multer": "1.4.5-lts.1",
    "prettier": "^3.0.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "typescript": "^5.2.2"
  }
}
